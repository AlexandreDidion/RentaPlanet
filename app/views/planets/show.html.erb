<div class="card" style="width: 22rem; margin: 10px">
   <div class="card-body">
     <h1 class="card-title">Name: <%= @planet.name %></h1>
     <h5 class="card-text">Address: <%= @planet.address %></h5>
     <h5 class="card-text">Price: <%= @planet.price %></h5>
     <h5 class="card-text">Guest number: <%= @planet.number_guests %></h5>
     <%= link_to "Back", planets_path%>
     <% if current_user == @planet.user %>
     <%= link_to "Update", edit_planet_path %>
     <%= link_to "Delete planet", @planet, data: { confirm: "Are you sure?" }, :method => :delete %>
     <% end %>
   </div>
</div>