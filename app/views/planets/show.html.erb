<div class="container">
  <div class="card" style="width: 22rem; margin: 10px">
     <div class="card-body">
       <h1 class="card-title">Name: <%= @planet.name %></h1>
       <h5 class="card-text">Address: <%= @planet.address %></h5>
       <h5 class="card-text">Price: <%= @planet.price %></h5>
       <h5 class="card-text">Guest number: <%= @planet.number_guests %></h5>
       <%= link_to "Update", edit_planet_path(@planet) %>
       <%= link_to "Back", root_path%>
       <%= link_to "Make a booking", new_planet_booking_path(@planet) %>
     </div>
  </div>

  <div class="card" style="width: 22rem; margin: 10px">
     <div class="card-body">
       <h1 class="card-title">My bookings</h1>
       <% if @planet.bookings.any? %>
          <% @planet.bookings.each do |booking| %>
            <h5 class="card-text"><%= booking.start_date %> - <%= booking.end_date %></h5>
          <% end %>
       <% else %>
        <h5 class="card-text">You currently have no bookings for <%= @planet.name %></h5>
       <% end %>
     </div>
  </div>
</div>


