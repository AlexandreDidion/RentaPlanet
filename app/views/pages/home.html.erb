<div class="banner">
   <div class="text-banner">
      <h1>Welcome to Rental Planet</h1>
      <p>The luxury space vacation rentals</p>
   </div>
   <div class="rental-planet-main-btn">
     <%= link_to 'Explore worlds nearby', planets_path, type:"button", class:"btn btn-light"%>
   </div>
</div>
<br>
<br>
<div class="moons-satellites">
  <div class="cards-smaller">
    <% @planets.each do |planet| %>
    <div class="cards-moons-satellites">
      <% if planet.photos.attached? %>
        <%= cl_image_tag planet.photos.first.key, height: 200, width: 200, crop: :fill %>
      <% else %>
        <%= image_tag('earth.jpg', height: 200, width: 200) %>
      <% end %>
        <br>
        <h3><%= link_to planet.name, planet_path(planet) %></h3>
        <p><%= planet.address %></p>
        <br>
      <br>
    </div>
    <% end %>
  </div>
</div>


